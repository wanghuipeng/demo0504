/**app.wxss**/

page {
    background: hsla(0, 0%, 94%, .941);
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    box-sizing: border-box;
}

.orange {
    color: #ff5900;
}

.orange1 {
    color: #f3a049;
}

.blue {
    color: #007eff;
}

.shade {
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: 0.7;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 200;
}